<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:JoeCalc"
             x:Class="JoeCalc.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Entry Placeholder="0"
               Grid.RowSpan="2"
               Grid.ColumnSpan="4"
               HorizontalTextAlignment="End"
               FontSize="Header"
               Keyboard="Numeric"/>

        <Button Text="C"
                TextColor="Red"
                Clicked="OnClearButtonClicked"
                Grid.Row="2"
                Grid.Column="0" />
        <Button Text="()"
                Clicked="OnParenthesesButtonClicked"
                Grid.Row="2"
                Grid.Column="1" />
        <Button Text="/"
                Clicked="OnDivideButtonClicked"
                Grid.Row="2"
                Grid.Column="2" />
        <Button Text="&lt;-"
                Clicked="OnDeleteButtonClicked"
                Grid.Row="2"
                Grid.Column="3" />

        <Button Text="7"
                Clicked="On7ButtonClicked"
                Grid.Row="3"
                Grid.Column="0" />
        <Button Text="8"
                Clicked="On8ButtonClicked"
                Grid.Row="3"
                Grid.Column="1" />
        <Button Text="9"
                Clicked="On9ButtonClicked"
                Grid.Row="3"
                Grid.Column="2" />
        <Button Text="X"
                Clicked="OnTimesButtonClicked"
                Grid.Row="3"
                Grid.Column="3" />

        <Button Text="4"
                Clicked="On4ButtonClicked"
                Grid.Row="4"
                Grid.Column="0" />
        <Button Text="5"
                Clicked="On5ButtonClicked"
                Grid.Row="4"
                Grid.Column="1" />
        <Button Text="6"
                Clicked="On6ButtonClicked"
                Grid.Row="4"
                Grid.Column="2" />
        <Button Text="-"
                Clicked="OnMinusButtonClicked"
                Grid.Row="4"
                Grid.Column="3" />

        <Button Text="1"
                Clicked="On1ButtonClicked"
                Grid.Row="5"
                Grid.Column="0" />
        <Button Text="2"
                Clicked="On2ButtonClicked"
                Grid.Row="5"
                Grid.Column="1" />
        <Button Text="3"
                Clicked="On3ButtonClicked"
                Grid.Row="5"
                Grid.Column="2" />
        <Button Text="+"
                Clicked="OnPlusButtonClicked"
                Grid.Row="5"
                Grid.Column="3" />

        <Button Text="+/-"
                Clicked="OnSignButtonClicked"
                Grid.Row="6"
                Grid.Column="0" />
        <Button Text="0"
                Clicked="On0ButtonClicked"
                Grid.Row="6"
                Grid.Column="1" />
        <Button Text="."
                Clicked="OnDotButtonClicked"
                Grid.Row="6"
                Grid.Column="2" />
        <Button Text="="
                Clicked="OnEqualsButtonClicked"
                Grid.Row="6"
                Grid.Column="3" />
    </Grid>

</ContentPage>
