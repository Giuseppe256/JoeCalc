<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:JoeCalc"
             x:Class="JoeCalc.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Entry x:Name="result"
               Text=""
               Placeholder="0"
               Grid.RowSpan="2"
               Grid.ColumnSpan="4"
               HorizontalTextAlignment="End"
               VerticalTextAlignment="End"
               FontSize="Header"
               Keyboard="Numeric" />

        <Button Text="C"
                TextColor="Red"
                Clicked="OnClearButtonClicked"
                Grid.Row="2"
                Grid.Column="0" />
        <Button Text="()"
                Clicked="OnParenthesesButtonClicked"
                Grid.Row="2"
                Grid.Column="1" />
        <Button x:Name="divide"
                Text="/"
                Clicked="OnOperatorButtonClicked"
                Grid.Row="2"
                Grid.Column="2" />
        <Button Text="&lt;-"
                Clicked="OnDeleteButtonClicked"
                Grid.Row="2"
                Grid.Column="3" />

        <Button Text="7"
                Clicked="OnNumButtonClicked"
                Grid.Row="3"
                Grid.Column="0" />
        <Button Text="8"
                Clicked="OnNumButtonClicked"
                Grid.Row="3"
                Grid.Column="1" />
        <Button Text="9"
                Clicked="OnNumButtonClicked"
                Grid.Row="3"
                Grid.Column="2" />
        <Button x:Name="times"
                Text="X"
                Clicked="OnOperatorButtonClicked"
                Grid.Row="3"
                Grid.Column="3" />

        <Button Text="4"
                Clicked="OnNumButtonClicked"
                Grid.Row="4"
                Grid.Column="0" />
        <Button Text="5"
                Clicked="OnNumButtonClicked"
                Grid.Row="4"
                Grid.Column="1" />
        <Button Text="6"
                Clicked="OnNumButtonClicked"
                Grid.Row="4"
                Grid.Column="2" />
        <Button x:Name="minus"
                Text="-"
                Clicked="OnOperatorButtonClicked"
                Grid.Row="4"
                Grid.Column="3" />

        <Button Text="1"
                Clicked="OnNumButtonClicked"
                Grid.Row="5"
                Grid.Column="0" />
        <Button Text="2"
                Clicked="OnNumButtonClicked"
                Grid.Row="5"
                Grid.Column="1" />
        <Button Text="3"
                Clicked="OnNumButtonClicked"
                Grid.Row="5"
                Grid.Column="2" />
        <Button x:Name="plus"
                Text="+"
                Clicked="OnOperatorButtonClicked"
                Grid.Row="5"
                Grid.Column="3" />

        <Button Text="+/-"
                Clicked="OnSignButtonClicked"
                Grid.Row="6"
                Grid.Column="0" />
        <Button Text="0"
                Clicked="OnNumButtonClicked"
                Grid.Row="6"
                Grid.Column="1" />
        <Button Text="."
                Clicked="OnDotButtonClicked"
                Grid.Row="6"
                Grid.Column="2" />
        <Button Text="="
                Clicked="OnEqualsButtonClicked"
                Grid.Row="6"
                Grid.Column="3" />
    </Grid>

</ContentPage>
